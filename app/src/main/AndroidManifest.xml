<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.codenameeh">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- To access geolocation -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Book eXchange"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.ConfirmationActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="" />
        <activity android:name=".activities.ScanActivity"
            android:label="" />
        <activity android:name=".activities.EditBookActivity"
            android:label="" />
        <activity
            android:name=".activities.ViewBookActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="" />
        <activity
            android:name=".activities.TakeNewBookActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="" />
        <activity
            android:name=".activities.BookListActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="" />
        <activity
            android:name=".activities.BorrowingListActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="" />
        <activity
            android:name=".activities.EditProfileActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="" />
        <activity
            android:name=".activities.BaseActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="" />
        <activity
            android:name=".activities.NotificationActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="" />
        <activity
            android:name=".activities.RequestActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="" />
        <activity
            android:name=".activities.ViewRequestsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="" />
        <activity
            android:name=".activities.SearchBooksActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="" />
        <activity
            android:name=".activities.GeolocationActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_map_api_key" />
    </application>

</manifest>